<div class="tab" id="inventory" data-group="sheet" data-tab="inventory">
    <div class="character-biography character-biography cut-corner">
      <div class="inventory-tabs">
            <div data-action="filtre" data-type="all">{{localize 'Liber.Character.Inventory.All'}}</div>
            <div data-action="filtre" data-type="weapon">{{localize 'Liber.Character.Inventory.Weapon'}}</div>
            <div data-action="filtre" data-type="armor">{{localize 'Liber.Character.Inventory.Armor'}}</div>
            <div data-action="filtre" data-type="shield">{{localize 'Liber.Character.Inventory.Shield'}}</div>
            <div data-action="filtre" data-type="item">{{localize 'Liber.Character.Inventory.Consomables'}}</div>
            <span class="kit" title="{{localize 'Liber.Characeter.Kit'}}" data-action="kit"></span>
        </div>
      <ul class="inventaire">
          {{#each visibleItems as |item id|}} 
              <li class="item fexrow type-{{item.type}} draggable" data-item-id="{{item._id}}" style="background:url({{item.img}}) center center no-repeat;background-size:50%" title="{{stripHTML item.system.biography}}{{#if (eq item.type "weapon")}} | Porter:{{item.system.degat}} | Dommage: {{item.system.degat}}{{/if}}{{#if (eq item.type "armor")}}| Protection:{{item.system.protec}}{{/if}} [ {{item.system.valeur}}Cr ]">
                <div class="item-qty">{{item.system.quantity}}</div>
                <div class="item-weigth">{{item.system.poids}}Kg</div>
                <div class="item-name">{{item.name}}</div>
                <div class="zonecontroledroit">
                  <a class="item-control item-edit" title="Edit Item" data-action="edit" data-item-id="{{item._id}}"><i class="fas fa-edit"></i></a>
                  <a class="item-control item-delete" title="Delete Item" data-action="delete" data-item-id="{{item._id}}"><i class="fas fa-trash"></i></a>
                </div>
                <div class="zonecontrolegauche">
                  <span class="item-control gauche" title="{{localize 'Liber.Character.HandL'}}" data-action="equip" data-ou="gauche" data-item-id="{{item._id}}"></span>
                  <span class="droite" title="{{localize 'Liber.Character.HandR'}}" data-action="equip" data-ou="droite" data-item-id="{{item._id}}"></span> 
                  <span class="chargeur" title="{{localize 'Liber.Character.Chargeur'}}" data-action="equip" data-ou="chargeur" data-item-id="{{item._id}}"></span> 
                  <span class="ceinture" title="{{localize 'Liber.Character.Ceinture'}}" data-action="equip" data-ou="ceinture" data-item-id="{{item._id}}" data-protection="{{item.system.pv}}" data-protection-max="{{item.system.pvmax}}"></span> 
                  <span class="middle" title="{{localize 'Liber.Character.Middle'}}" data-action="equip" data-protection="{{item.system.pv}}" data-protection-max="{{item.system.pvmax}}" data-ou="middle" data-item-id="{{item._id}}"></span>
                </div>
                <!--
                  <div class="item-controls">

                    <span class="dice" data-action="rollDamage" data-item-id="{{item._id}}"><i class="fa-solid fa-dice-d20"></i></span>
                  </div>
                </div-->
              </li>
          {{/each}}
        </ul>
    </div>
    <div class="inventory-list cut-corner" style="height: 256px;position:relative">
      {{localize "Liber.Character.Competence"}}
      <ul>
      <!--{{#each competence as |item id|}} 
        <li class="compt fexrow type-{{item.type}} active draggable" data-item-id="{{item._id}}" style="background:url({{item.img}}) center  center no-repeat;background-size:contain" title="{{{item.system.biography}}}">
           <div class="zonecontroledroit">
            <a class="item-control item-edit" title="Edit Item" data-action="edit" data-item-id="{{item._id}}"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item" data-action="delete" data-item-id="{{item._id}}"><i class="fas fa-trash"></i></a>
          </div>
        </li>
        {{/each}}-->
        {{#each competence as |item id|}}
           <div class="compt niv{{item.system.position}}" style="background:url({{item.img}}) center center no-repeat;background-size:contain" title="{{{item.system.biography}}}">
              <div class="zonecontroledroit">
                <a class="item-control item-edit" title="Edit Item" data-action="edit" data-item-id="{{item._id}}"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item" data-action="delete" data-item-id="{{item._id}}"><i class="fas fa-trash"></i></a>
              </div>
           </div>
        {{/each}}
        <ul>
    </div>
</div>