<form class="{{cssClass}} Liber planete" autocomplete="off" >
    <header>
        <h1>Liber SF</h1>
    </header>
    <div class="col3">
        <input class="nomperso" name="name" type="text" value="{{actor.name}}" placeholder="Name"/>
        <h2>{{localize 'libersf.info'}}</h2>
        <div class="info infoplanete">
            <span>{{localize 'libersf.surnom'}}</span><input class="nick" name="system.surnom" type="text" value="{{actor.system.surnom}}" placeholder="{{localize 'libersf.surnom'}}"/>
            <span>{{localize 'libersf.controle'}}</span>
            <select class="model" size="1" name="system.domination">
                {{selectOptions listValues.faction selected=actor.system.domination labelAttr="label" localize=true blank="libersf.none"}}
            </select>
            <span>{{localize 'libersf.pop'}}</span>
            <input class="popu" name="system.niveau_pop" type="text" value="{{actor.system.niveau_pop}}" placeholder="Population"/>
            <span>{{localize 'libersf.crime'}}</span>
            <select class="model" size="1" name="system.niveau_crime">
                {{selectOptions listValues.niveau selected=actor.system.niveau_crime labelAttr="label" localize=true blank="libersf.none"}}
            </select>
            <span>{{localize 'libersf.securite'}}</span>
            <select class="model" size="1" name="system.niveau_secu">
                {{selectOptions listValues.niveau selected=actor.system.niveau_secu labelAttr="label" localize=true blank="libersf.none"}}
            </select>
            <span>{{localize 'libersf.techno'}}</span>
            <select class="model" size="1" name="system.niveau_tech">
                {{selectOptions listValues.niveau selected=actor.system.niveau_tech labelAttr="label" localize=true blank="libersf.none"}}
            </select>
        </div>
        <div class="clear"></div>
        <h2 class="marge">{{localize 'libersf.ville'}}</h2>
        <textarea class="ville" name="system.ville">{{actor.system.ville}}</textarea>
        <h2 class="marge">{{localize 'libersf.ressource'}}</h2>
        <textarea class="ville" name="system.ressource">{{actor.system.ressource}}</textarea>
        <h2 class="marge">{{localize 'libersf.pop'}}</h2>
        <div class="info">
            {{#each actor.system.pop as |value pop|}}
                <span>{{pop}}</span>
                <input name="system.pop.{{pop}}" type="text" value="{{value}}" placeholder="{{pop}}"/>
            {{/each}}
            
        </div>
        <div class="clear"></div>
    </div>
    <div class="col32">
        <div class="life life2">
            <input class="hp" name="system.stat.hp.value" type="text" value="{{actor.system.stat.hp.value}}" placeholder="10"/><span style="display: inline-block;">/</span><input class="hpmax" name="system.stat.hp.max" type="text" value="{{actor.system.stat.hp.max}}" placeholder="10"/>
        </div>
        <div class="rond">
            <div class="scan3"></div>
            <div class="danger">
                <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
            </div>
        </div>
        <div class="boucl boucl2"><input class="actbou" name="system.stat.protections.value" type="text" value="{{actor.system.stat.protections.value}}" placeholder="0"/><span>/</span>
            <input  class="actboumax" name="system.stat.protections.max" type="text" value="{{actor.system.stat.protections.max}}" placeholder="0"/></div>
        <div class="full">
            <h3>{{localize 'libersf.histoire'}}</h3>
            <div class="zoneinfo">
                <textarea class="histoire" name="system.background.histoire">{{actor.system.background.histoire}}</textarea>
            </div>
        </div>
    </div>
</form>