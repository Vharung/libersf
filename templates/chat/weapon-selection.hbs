<div class="weapon-selection-dialog">
  <div class="form-group">
    <label for="selected-weapon">{{labels.choixArme}}</label>
    <select id="selected-weapon" name="weaponId">
      {{#each weapons}}
        <option value="{{this.id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="selected-tir">{{labels.choixTir}}</label>
    <select id="selected-tir" name="tirMode">
      {{#each tirModes}}
        <option value="{{this.value}}">{{this.label}}</option>
      {{/each}}
    </select>
  </div>

  <div class="dialog-buttons">
    <button type="button" data-action="confirm" class="dialog-button confirm">
      <i class="fas fa-check"></i> Valider
    </button>
    <button type="button" data-action="cancel" class="dialog-button cancel">
      <i class="fas fa-times"></i> Annuler
    </button>
  </div>
</div>